@model Post

<div class="container">
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter Title">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input asp-for="Description" class="form-control" placeholder="Enter Description">
        </div>

        <div class="form-group">
            <label>Photo</label>
            <input asp-for="ImgFile" class="form-control" placeholder="Enter Photo" accept=".jpg , .png , .jpeg">
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>